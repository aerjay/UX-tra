		</nav>

		<div id="section" class="col-lg-11 col-12 ">
			<ul class="nav nav-tabs" role="tablist">
				<!--THIS CHANGES WHEN MOVING ON DIFFERENT PAGES-->
				<li class="nav-item">
					<a class="nav-link tab active" data-toggle="tab" href="#all">Suggestions</a>
				</li>
				<li class="nav-item">
					<a class="nav-link tab" data-toggle="tab" href="#open">Most Recent</a>
				</li>
			</ul>

			<div id="brickwall" class="container-fluid">
				<!-- THIS CHANGES WHEN MOVING ON DIFFERENT PAGES-->
				<% if (data.length > 0) { %>
					<% for (let i of data) {%>
					<script type="text/javascript" src="/javascripts/dashboard.js"></script>
					<div class="brick">
							<img src= <%-i.buff%>>
							<div class="dash-text-wrapper">
								<h3><%=i.proj%></h3>
								<p><%=i.des%></p>
							</div>
							<p class="brick-creator">By Anonymous</p>
					</div>
						<% } %>	
					<% } %>
			</div>
			<button id="addButton" class="btn" onclick="location.href='/addproj';">+
				<span id="hoverText">Add Project</span>
			</button>
		</div>

	</div>
